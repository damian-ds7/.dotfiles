Host *
  ServerAliveInterval 60
  ConnectTimeout 10
  AddKeysToAgent yes
  EscapeChar `
  ControlMaster auto
  ControlPersist 72000
  ControlPath ~/.ssh/s/%C

Host galera
  HostName galera.ii.pw.edu.pl
  User ddsouza

Host mion
  HostName mion.elka.pw.edu.pl
  User ddsouza
