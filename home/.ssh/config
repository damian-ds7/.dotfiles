# Read more about SSH config files: https://linux.die.net/man/5/ssh_config
Host *
  ServerAliveInterval 60
  ConnectTimeout 10
  AddKeysToAgent yes
  EscapeChar `
  ControlMaster auto
  ControlPersist 72000
  ControlPath ~/.ssh/s/%C

Host galera-tmux
  HostName galera.ii.pw.edu.pl
  User ddsouza
  RemoteCommand /home/users/ddsouza/.local/bin/tmux new -A -s default
  RequestTTY yes

Host galera
  HostName galera.ii.pw.edu.pl
  User ddsouza
